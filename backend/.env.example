# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/ai_marketing_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_marketing_db
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenRouter API Keys (Add multiple keys for automatic rotation)
OPENROUTER_API_KEY_1=sk-or-v1-your-first-openrouter-api-key-here
OPENROUTER_API_KEY_2=sk-or-v1-your-second-openrouter-api-key-here
OPENROUTER_API_KEY_3=sk-or-v1-your-third-openrouter-api-key-here
OPENROUTER_API_KEY_4=sk-or-v1-your-fourth-openrouter-api-key-here
OPENROUTER_API_KEY_5=sk-or-v1-your-fifth-openrouter-api-key-here
OPENROUTER_API_KEY_6=sk-or-v1-your-sixth-openrouter-api-key-here

# OpenRouter Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_SITE_URL=https://your-domain.com
OPENROUTER_SITE_NAME=AI Marketing Platform

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# External APIs (Optional)
GOOGLE_API_KEY=your-google-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Application Settings
DEBUG=false